{
  "name": "flink-ssh-manager",
  "version": "1.0.0",
  "description": "Flink Job Manager with SSH",
  "main": "electron.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "build": "vite build",
    "package:win": "npm run build && electron-builder --win --dir",
    "package:installer": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ssh2": "^1.15.0",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.263.1",
    "framer-motion": "^10.16.4"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
  "appId": "com.flink.ssh.manager",
  "productName": "Flink SSH Manager",
  "directories": {
    "output": "release"
  },
  "files": [
    "electron.js",
    "preload.js",
    "dist/**/*",
    "package.json",
    "node_modules/**/*"
  ],
  "extraFiles": [
    {
      "from": "preload.js",
      "to": "preload.js"
    }
  ],
  "asar": true,
  "asarUnpack": [
    "preload.js"
  ],
  "win": {
    "target": "dir",
    "sign": null
  }
}
}